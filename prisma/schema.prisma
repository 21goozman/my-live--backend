// 1. Generator
generator client {
  provider = "prisma-client-js"
}

// 2. Datasource (SQLite)
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// 3. Service model
model Service {
  id          String    @id @default(cuid())
  code        String    @unique
  name        String
  description String
  priceKES    Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  bookings    Booking[]
}

// 4. Booking model (fixed for SQLite)
model Booking {
  id          String   @id @default(cuid())
  name        String
  phone       String
  serviceId   String
  service     Service  @relation(fields: [serviceId], references: [id])
  startUTC    DateTime
  tz          String
  createdAt   DateTime @default(now())
  status      String   @default("CONFIRMED") // use string instead of enum

  @@index([startUTC])
  @@unique([startUTC])
}

 model User {
  id        String   @id @default(uuid())
  email     String   @unique
  phone     String?  @unique
  password  String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())


}
